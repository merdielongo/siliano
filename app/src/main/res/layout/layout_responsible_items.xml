<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1.5dp"
    app:cardCornerRadius="30dp"
    android:id="@+id/card_responsible">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@color/silver"
            android:id="@+id/img_responsible_photo"/>

        <TextView
            android:id="@+id/txt_responsible_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_toEndOf="@id/img_responsible_photo"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/blueDark"
            android:fontFamily="@font/segoeuib"
            android:textSize="14sp"
            android:layout_toRightOf="@id/img_responsible_photo" />

        <TextView
            android:id="@+id/txt_responsible_function"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_toEndOf="@id/img_responsible_photo"
            android:layout_below="@id/txt_responsible_name"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/blueDark"
            android:fontFamily="@font/segoeui"
            android:textSize="13sp"
            android:layout_toRightOf="@id/img_responsible_photo" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>